@using YPM.Web.Models.Urun.Kategori
@model UrunKategoriEkleModel
@addTagHelper *, ViewComponent
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AnaCerceve.cshtml";
}

<h2>Admin/UrunKategori/Ekle</h2>

<div class="row">

    <div class="container">
        <div class="col-md-3">
            @await Component.InvokeAsync("UrunKategoriListe")
        </div>
        <div class="col-md-8">
            <div class="col-md-8">
                <h2>UrunKategoriEkle</h2>

                <h4>UrunKategoriEkleModel</h4>
                <hr />
                <form asp-action="Ekle">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Ad" class="control-label"></label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="AktifMi" /> @Html.DisplayNameFor(model => model.AktifMi)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="NitelikEkleId" class="control-label"></label>
                        <select asp-for="NitelikEkleId" multiple="multiple" class="form-control" asp-items="@Model.TumNitelikler"></select>
                        <span asp-validation-for="NitelikEkleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Tanim" class="control-label"></label>
                        <textarea asp-for="Tanim" class="form-control"></textarea>
                        <span asp-validation-for="Tanim" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SayfaBaslik" class="control-label"></label>
                        <textarea asp-for="SayfaBaslik" class="form-control"></textarea>
                        <span asp-validation-for="SayfaBaslik" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Aciklama" class="control-label"></label>
                        <textarea asp-for="Aciklama" class="form-control"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AnahtarKelime" class="control-label"></label>
                        <textarea asp-for="AnahtarKelime" class="form-control"></textarea>
                        <span asp-validation-for="AnahtarKelime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>