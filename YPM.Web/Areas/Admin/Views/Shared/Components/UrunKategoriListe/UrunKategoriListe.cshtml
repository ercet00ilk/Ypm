                    @foreach (var kat2 in Model.Where(model => model.UstKategoriId.Equals(kat1.KategoriId)))
                    {
                        <li>
                            <a asp-area="admin" asp-controller="urunkategori" asp-action="Getir" asp-route-katId="@kat2.KategoriId">@kat2.Ad</a>
                            <ul>
                                @foreach (var kat3 in Model.Where(model => model.UstKategoriId.Equals(kat2.KategoriId)))
                                {
                                    <li>
                                        <a asp-area="admin" asp-controller="urunkategori" asp-action="Getir" asp-route-katId="@kat3.KategoriId">@kat3.Ad</a>
                                        <ul>
                                            @foreach (var kat4 in Model.Where(model => model.UstKategoriId.Equals(kat3.KategoriId)))
                                            {
                                                <li>
                                                    <a asp-area="admin" asp-controller="urunkategori" asp-action="Getir" asp-route-katId="@kat4.KategoriId">@kat4.Ad</a>
                                                    <ul>

                                                        @foreach (var kat5 in Model.Where(model => model.UstKategoriId.Equals(kat4.KategoriId)))
                                                        {
                                                            <li>
                                                                <a asp-area="admin" asp-controller="urunkategori" asp-action="Getir" asp-route-katId="@kat5.KategoriId">@kat5.Ad</a>
