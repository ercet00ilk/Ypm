<h2>UrunKategoriListele</h2>

<h4>UrunKategoriListeleModel</h4>
<hr />
<div>
    <ul>
        @foreach (var kat1 in Model.Where(model => model.UstKategoriId.Equals(0)))
        {
            <li>
                <a asp-area="admin" asp-controller="urunkategori" asp-action="Getir" asp-route-katId="@kat1.KategoriId">@kat1.Ad</a>
